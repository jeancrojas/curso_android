<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.jesus.a03ejemplo.Main2Activity">

    <TextView
        android:text="Actividad 2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp"
        android:id="@+id/textView2" />

    <Button
        android:text="Boton Volver"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:id="@+id/buttonVolver"
        tools:text="Boton volver"
        android:layout_below="@+id/textView2"
        android:layout_alignEnd="@+id/buttonMostrarHora" />

    <Button
        android:text="Mostrar Fecha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonMostrarFecha"
        android:layout_below="@+id/buttonVolver"
        android:layout_alignStart="@+id/buttonVolver"
        android:layout_marginTop="34dp" />

    <Button
        android:text="Mostrar hora"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="29dp"
        android:id="@+id/buttonMostrarHora"
        android:layout_below="@+id/buttonMostrarFecha"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="Salir"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/buttonMostrarHora"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="48dp"
        android:id="@+id/buttonSalir" />
</RelativeLayout>
