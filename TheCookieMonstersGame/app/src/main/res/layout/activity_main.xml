<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="es.cice.thecookiemonstersgame.MainActivity">

    <LinearLayout
        android:id="@+id/cookieMonster1"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cookie Monster 1"
            android:textStyle="bold"
            android:textSize="19sp"
            android:textAlignment="center"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Total cookies eaten so far..."/>

        <TextView
            android:id="@+id/numCookies1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="0"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/cookieMonster2"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cookieMonster1">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cookie Monster 2"
            android:textStyle="bold"
            android:textSize="19sp"
            android:textAlignment="center"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Total cookies eaten so far..."/>

        <TextView
            android:id="@+id/numCookies2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="0"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/oven"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cookieMonster2">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Grandma's oven"
            android:textStyle="bold"
            android:textSize="19sp"
            android:textAlignment="center"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Total cookies eaten so far..."/>

        <TextView
            android:id="@+id/simulationClock"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Simulation clock: 0/0 sec."/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/oven">

        <Button
            android:id="@+id/btnStartOver"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Start over"/>

        <Button
            android:id="@+id/btnCancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancel"/>

    </LinearLayout>



</RelativeLayout>
